<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/background_gradient"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="3"
        android:rowCount="3"
        android:alignmentMode="alignMargins">

        <LinearLayout
            android:id="@+id/item_network"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/edittext"
            android:focusable="true"
            android:clickable="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_wifi_signal_4"
                app:tint="@color/white"
                android:contentDescription="@string/network_item" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/network_item"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_bluetooth"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/edittext"
            android:focusable="true"
            android:clickable="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/stat_sys_data_bluetooth"
                app:tint="@color/white"
                android:contentDescription="@string/bluetooth_item" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bluetooth_item"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_projector"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/edittext"
            android:focusable="true"
            android:clickable="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu_camera"
                app:tint="@color/white"
                android:contentDescription="@string/projection_item" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/projection_item"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_image_video"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/edittext"
            android:focusable="true"
            android:clickable="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu_share"
                app:tint="@color/white"
                android:contentDescription="@string/image_video_item" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/image_video_item"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_sound"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/edittext"
            android:focusable="true"
            android:clickable="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/stat_sys_speakerphone"
                app:tint="@color/white"
                android:contentDescription="@string/sound_item" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sound_item"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_system"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/edittext"
            android:focusable="true"
            android:clickable="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_menu_preferences"
                app:tint="@color/white"
                android:contentDescription="@string/system_item" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/system_item"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_signal_sourc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/edittext"
            android:focusable="true"
            android:clickable="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu_info_details"
                app:tint="@color/white"
                android:contentDescription="@string/signal_source_item" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signal_source_item"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_signal_source"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/edittext"
            android:focusable="true"
            android:clickable="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu_view"
                app:tint="@color/white"
                android:contentDescription="@string/smart_wall_item" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/smart_wall_item"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_about"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/edittext"
            android:focusable="true"
            android:clickable="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu_help"
                app:tint="@color/white"
                android:contentDescription="@string/about_item" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_item"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </GridLayout>
</LinearLayout>